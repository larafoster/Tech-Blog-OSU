<div class="container d-flex justify-content-center py-3">
    <div class="col-md-5">

        <form id="login-form">

                <div class="card h-100">
                    <div class="card-header">
                       <h3>Login</h3> 
                    </div>
                    <div class="card-body">
                        <div class="form-group">
                            <label for="username-input-login">Username</label>
                            <input class="form-control" type="text" id="username-input-login" />
                        </div>
                        <div class="form-group">
                            <label for="password-input-login">Password</label>
                            <input class="form-control" type="password" id="password-input-login" />
                        </div>
                    </div>
                    <div class="card-footer bg-transparent">
                        <button class="btn btn-primary pb-2" type="submit">Login</button> <br />
                        <div class="pt-3">
                            <a href="/register">New around here? Register.</a>
                        </div>
                    </div>
                </div>
        </form>
    </div>
</div>
<script src="/js/login.js"></script>